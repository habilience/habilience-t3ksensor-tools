# must exec sudo
#if 11.10
apt-get build-dep libqt4-dev

apt-get install g++

export QTSRC_PATH=$PWD/qt-everywhere-opensource-src-5.4.0-rc
export OUT_BUILD_PATH=/opt/Qt5.4-rcStatic

rm -rf $OUT_BUILD_PATH 
mkdir $OUT_BUILD_PATH
cd $OUT_BUILD_PATH

if [ "$(uname -m)" = "x86_64" ]
then
$QTSRC_PATH/configure -prefix $OUT_BUILD_PATH/qtbase -static -opensource -confirm-license -debug-and-release -platform linux-g++-64 -nomake tests -nomake examples -opengl desktop -nomake tools -no-openssl -qpa xcb -qt-xcb -qt-libjpeg -qt-libpng -dbus
else
$QTSRC_PATH/configure -prefix $OUT_BUILD_PATH/qtbase -static -opensource -confirm-license -debug-and-release -platform linux-g++-32 -nomake tests -nomake examples -opengl desktop -nomake tools -no-openssl -qpa xcb -qt-xcb -qt-libjpeg -qt-libpng -dbus
fi

./qtbase/bin/qmake $QTSRC_PATH/qt.pro
make -j8
make install
